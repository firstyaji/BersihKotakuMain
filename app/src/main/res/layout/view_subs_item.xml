<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subsImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/subsTitle"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/subsDelete"
        app:layout_constraintStart_toEndOf="@+id/subsImage"
        app:layout_constraintTop_toTopOf="@+id/subsImage"
        tools:text="House Pack" />

    <TextView
        android:id="@+id/subsTime"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/subsTitle"
        app:layout_constraintStart_toStartOf="@+id/subsTitle"
        app:layout_constraintTop_toBottomOf="@+id/subsTitle"
        tools:text="20 June 2020" />

    <TextView
        android:id="@+id/subsPriceLabel"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/subsTime"
        app:layout_constraintStart_toStartOf="@+id/subsTime"
        app:layout_constraintTop_toBottomOf="@+id/subsTime"
        tools:text="Price" />

    <TextView
        android:id="@+id/subsPrice"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/subsPriceLabel"
        app:layout_constraintStart_toStartOf="@+id/subsPriceLabel"
        app:layout_constraintTop_toBottomOf="@+id/subsPriceLabel"
        tools:text="Rp.25.0000" />

    <Button
        android:id="@+id/subsDelete"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/ic_delete"
        app:iconTint="?colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>